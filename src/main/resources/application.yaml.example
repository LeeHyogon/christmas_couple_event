spring:
  application:
    name: demo
  
  servlet:
    multipart:
      max-file-size: 10MB
      max-request-size: 10MB
  
  profiles:
    active: local  # 기본은 local, AWS 배포시 prod로 변경
  
  datasource:
    url: jdbc:mysql://localhost:3306/christmas_db?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    driver-class-name: com.mysql.cj.jdbc.Driver
    username: root
    password: your_password  # 본인의 MySQL 비밀번호로 변경
  
  jpa:
    hibernate:
      ddl-auto: update  # 개발시 update, 프로덕션은 validate 권장
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.MySQLDialect
        use_sql_comments: true

file:
  upload-dir: uploads
